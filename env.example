# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================

# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID группы для уведомлений мастеров
WORK_CHAT_ID=-1001234567890

# ========================================
# ROLES CONFIGURATION
# ========================================

# Администраторы (через запятую)
ADMIN_IDS=123456789,987654321

# Диспетчеры (через запятую)
DISPATCHER_IDS=111111111,222222222

# Мастера (через запятую)
MASTER_IDS=333333333,444444444

# ========================================
# DATABASE CONFIGURATION
# ========================================

# SQLite (по умолчанию для dev)
DATABASE_URL=sqlite+aiosqlite:///bot_database.db

# PostgreSQL (для production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/bot_db

# ========================================
# ENCRYPTION (Шифрование персональных данных)
# ========================================

# Ключ шифрования (сгенерировать: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# ВАЖНО: НЕ ПУБЛИКОВАТЬ в git! Хранить в секрете!
ENCRYPTION_KEY=your_encryption_key_here

# Включить шифрование данных (true/false)
ENCRYPT_DATA=false

# ========================================
# REDIS CONFIGURATION (для production FSM)
# ========================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password  # Если нужен

# ========================================
# APPLICATION SETTINGS
# ========================================

# Режим работы (development/production)
ENV=development

# Интервал напоминаний (в минутах)
REMINDER_INTERVAL=60

# Часовой пояс
TIMEZONE=Europe/Moscow

# Логирование
LOG_LEVEL=INFO
LOG_FILE=data/bot.log

# ========================================
# BACKUP SETTINGS
# ========================================

# Путь для бэкапов
BACKUP_DIR=data/backups

# Автоматические бэкапы (true/false)
AUTO_BACKUP=true

# Частота бэкапов (в часах)
BACKUP_INTERVAL=24

# ========================================
# MONITORING (опционально)
# ========================================

# Sentry DSN для отслеживания ошибок
# SENTRY_DSN=https://your_sentry_dsn

# Prometheus metrics port
# METRICS_PORT=9090
