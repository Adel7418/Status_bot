# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================

# Токен Telegram бота (получите у @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-EXAMPLE

# Telegram ID администраторов (через запятую)
# Узнать свой ID можно у @userinfobot
ADMIN_IDS=123456789,987654321

# Telegram ID диспетчеров (через запятую)
DISPATCHER_IDS=111222333,444555666

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Путь к файлу базы данных SQLite
DATABASE_PATH=bot_database.db

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# REDIS CONFIGURATION (для production)
# ========================================

# URL для подключения к Redis (для FSM storage в production)
# Для разработки можно оставить пустым (будет использован MemoryStorage)
REDIS_URL=redis://localhost:6379/0

# ========================================
# SCHEDULER CONFIGURATION
# ========================================

# Интервал проверки SLA заявок (в минутах)
SLA_CHECK_INTERVAL=30

# Интервал напоминаний о непринятых заявках (в минутах)
REMINDER_INTERVAL=5

# Время отправки ежедневной сводки (формат HH:MM)
DAILY_SUMMARY_TIME=09:00

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Максимальная длина описания заявки
MAX_DESCRIPTION_LENGTH=500

# Максимальная длина заметок
MAX_NOTES_LENGTH=1000

# Регулярное выражение для валидации телефонных номеров
PHONE_REGEX=^\+?[0-9]{10,15}$

# ========================================
# MONITORING (опционально)
# ========================================

# Sentry DSN для мониторинга ошибок (опционально)
# SENTRY_DSN=https://your-sentry-dsn-here

# Prometheus metrics port (опционально)
# PROMETHEUS_PORT=8000

