# ========================================
# Local Development Environment Configuration
# ========================================
# Это шаблон для создания .env файла для локальной разработки
# Скопируйте: cp env.example .env
# Затем отредактируйте .env и укажите свои значения

# ==================== Bot Configuration ====================
# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID группы для уведомлений (опционально)
GROUP_CHAT_ID=-100xxxxxxxxxx

# ==================== Admin Configuration ====================
# Администраторы (через запятую)
ADMIN_IDS=123456789

# Диспетчеры (через запятую, опционально)
DISPATCHER_IDS=

# ==================== Database Configuration ====================
# Путь к базе данных (для локальной разработки)
DATABASE_PATH=bot_database.db
# НЕ используйте /app/data/ - это путь для Docker

# ==================== Redis Configuration ====================
# Для локальной разработки Redis опционален (используется MemoryStorage)
REDIS_URL=redis://localhost:6379/0

# ==================== Environment ====================
ENVIRONMENT=development
DEV_MODE=true
LOG_LEVEL=DEBUG

# ==================== ORM Configuration ====================
# ВАЖНО: Для локальной разработки используйте ORM
USE_ORM=true

# ==================== Scheduler Configuration ====================
SLA_CHECK_INTERVAL=30
REMINDER_INTERVAL=5

# ==================== Backup Configuration ====================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 3 * * *

# ==================== Monitoring (Optional) ====================
SENTRY_DSN=

# ==================== Scheduler ====================
SCHEDULER_TIMEZONE=Europe/Moscow
ENABLE_REMINDERS=true

# ==================== Notifications ====================
NOTIFY_ADMINS_ON_STARTUP=false
NOTIFY_ADMINS_ON_SHUTDOWN=false
