# ========================================
# STAGING ENVIRONMENT CONFIGURATION
# ========================================
# Это пример конфигурации для STAGING окружения
# Скопируйте этот файл в .env.staging и заполните реальными значениями

# ========================================
# TELEGRAM BOT CONFIGURATION (STAGING)
# ========================================

# !!! ВАЖНО: Используйте ТЕСТОВЫЙ токен бота для staging !!!
# Создайте отдельного тестового бота у @BotFather
# Это предотвратит конфликты с production ботом
BOT_TOKEN=YOUR_TEST_BOT_TOKEN_HERE

# Telegram ID администраторов (через запятую)
# Можете использовать свой ID для тестирования
ADMIN_IDS=123456789

# Telegram ID диспетчеров (через запятую)
DISPATCHER_IDS=111222333

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Путь к файлу базы данных SQLite (для staging)
# При использовании Docker volumes, путь внутри контейнера
DATABASE_PATH=/app/data/bot_database.db

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Уровень логирования для staging: DEBUG (подробные логи)
LOG_LEVEL=DEBUG

# ========================================
# MONITORING & ERROR TRACKING
# ========================================

# Окружение для мониторинга
ENVIRONMENT=staging

# Sentry DSN (опционально, можно использовать отдельный проект Sentry для staging)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# ========================================
# REDIS CONFIGURATION
# ========================================

# URL для подключения к Redis (в Docker Compose используется service name)
REDIS_URL=redis://redis:6379/0

# ========================================
# SCHEDULER CONFIGURATION
# ========================================

# Интервал проверки SLA заявок (в минутах)
# Для staging можно сократить для быстрого тестирования
SLA_CHECK_INTERVAL=5

# Интервал напоминаний о непринятых заявках (в минутах)
REMINDER_INTERVAL=2

# Время отправки ежедневной сводки (формат HH:MM)
DAILY_SUMMARY_TIME=10:00

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Максимальная длина описания заявки
MAX_DESCRIPTION_LENGTH=500

# Максимальная длина заметок
MAX_NOTES_LENGTH=1000

# Регулярное выражение для валидации телефонных номеров
PHONE_REGEX=^\+?[0-9]{10,15}$

# ========================================
# STAGING NOTES
# ========================================
# 1. Всегда используйте ТЕСТОВЫЙ токен бота (не prod!)
# 2. Можете использовать тестовую базу данных
# 3. DEBUG уровень логирования для детальной отладки
# 4. Сокращенные интервалы для быстрого тестирования функций

